# ===========================================
# Application
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=v1

# ===========================================
# Database (Docker)
# ===========================================
DATABASE_URL="postgresql://postgres:tu_password@localhost:5432/restaurants_db?schema=public"

# Credenciales PostgreSQL para Docker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_seguro
POSTGRES_DB=restaurants_db

# ===========================================
# JWT - Autenticacion
# ===========================================
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=tu_refresh_token_secret_aqui
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Bcrypt
# ===========================================
BCRYPT_SALT_ROUNDS=10

# ===========================================
# Rate Limiting
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# Upload
# ===========================================
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=5242880

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4200
